{
  "layer": "top",
  "position": "top",
  "height": 40,
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 10,
  
  "modules-left": ["clock", "network"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["pulseaudio", "backlight", "battery", "tray"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "󰄰",
      "active": "󰄲"
    }
  },

  "clock": {
    "format": "󱑊 {:%H:%M}"
  },
  
  "network": {
    "format-wifi": "󰤨",
    "format-disconnected": "󰖪"
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["󰁺", "󰁼", "󰁾", "󰂀", "󰁹"]
  }
}