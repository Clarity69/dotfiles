{
  "include": "~/.config/waybar/modules",
  "position": "top",
  "layer": "top",

  "modules-left": [
    "group/clock",
    "group/battery",
    "group/workspaces"
  ],
  "modules-center": [],
  "modules-right": [
    "group/network",
    "group/audio",
    "group/notification",
    "group/tray"
  ],


  "group/notification": {
    "orientation": "inherit",
    "modules": ["custom/notification"]
  },
  "group/clock": {
    "modules": ["clock"]
  },
  "group/battery": {
    "modules": ["battery"]
  },
  "group/network": {
    "modules": ["network"]
  },
  "group/pulseaudio": {
    "modules": ["pulseaudio","pulseaudio#microphone"]
  },
  "group/tray": {
    "modules": ["tray"]
  },
  "group/workspaces": {
    "modules":["hyprland/workspaces#kanji"]
  },

  "clock": {
    "format": "󱑊 {:%H:%M}",
    "format-alt": "󰃭 {:%a, %d %b}",
    "tooltip-format": "<big>{:%Y}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "battery": {
    "bat": "BAT0",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
  },

  "group/network": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "network-text",
      "transition-left-to-right": false
    },
    "modules": [
      "network",
      "network#ssid"
    ]
  },

  "network": {
    "on-click": "bash ~/.config/rofi/scripts/rofi-wifi-menu.sh",
    "interface": "wlan0",
    "format-wifi": "󰤨",
    "format-ethernet": "󰊗",
    "format-disconnected": "󰤮",
    "tooltip-format": "{essid} ({signalStrength}%)"
  },

  "network#ssid": {
    "format-wifi": "{essid}",
    "format-ethernet": "{ipaddr}",
    "format-disconnected": "Disconnected",
    "tooltip": false
  },

    "tray":{
        "icon-size": 15,
        "spacing": 8
    },
    "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
        "alsa_output.pci-0000_00_1f.3.analog-stereo": "",
        "alsa_output.pci-0000_00_1f.3.anal#cba6f7og-stereo-muted": "",
        "headphone": "",
        "hands-free": "",
        "headset": "",
        "phone": "",
        "phone-muted": "",
        "portable": "",
        "car": "",
        "default": ["", ""]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
    },
    "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "󱅫",
      "none": "󰂚",
      "dnd-notification": "󱏧",
      "dnd-none": "󰂛",
      "inhibited-notification": "󱅫",
      "inhibited-none": "󰂚",
      "dnd-inhibited-notification": "󱏧",
      "dnd-inhibited-none": "󰂛"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
    },
    "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": " {volume}%",
    "format-source-muted": " Muted",
    "on-click": "~/.config/hypr/scripts/volume_control.sh --toggle-mic",
    "on-click-right": "pavucontrol -t 4",
    "on-scroll-up": "~/.config/hypr/scripts/volume_control.sh --mic-inc",
    "on-scroll-down": "~/.config/hypr/scripts/volume_control.sh --mic-dec",
    "tooltip-format": "{source_desc} | {source_volume}%",
    "scroll-step": 5
    }
}