{
  "include": "~/.config/waybar/modules",
  "position": "top",
  "layer": "top",

  "modules-left": [
    "group/clock",
    "group/battery",
    "group/workspaces"
  ],
  "modules-center": [],
  "modules-right": [
    "group/network",
    "group/audio",
    "group/tray"
  ],

  "group/clock": {
    "modules": ["clock"]
  },
  "group/battery": {
    "modules": ["battery"]
  },
  "group/network": {
    "modules": ["network"]
  },
  "group/pulseaudio": {
    "modules": ["pulseaudio"]
  },
  "group/tray": {
    "modules": ["tray"]
  },
  "group/workspaces": {
    "modules":["hyprland/workspaces#roman"]
  },

  "clock": {
    "format": "󱑊 {:%H:%M}",
    "format-alt": "󰃭 {:%a, %d %b}",
    "tooltip-format": "<big>{:%Y}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "battery": {
    "bat": "BAT0",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
  },

  "group/network": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "network-text",
      "transition-left-to-right": false
    },
    "modules": [
      "network",
      "network#ssid"
    ]
  },

  "network": {
    "on-click": "bash ~/.config/rofi/scripts/rofi-wifi-menu.sh",
    "interface": "wlan0",
    "format-wifi": "󰤨",
    "format-ethernet": "󰊗",
    "format-disconnected": "󰤮",
    "tooltip-format": "{essid} ({signalStrength}%)"
  },

  "network#ssid": {
    "format-wifi": "{essid}",
    "format-ethernet": "{ipaddr}",
    "format-disconnected": "Disconnected",
    "tooltip": false
  },

    "tray":{
        "icon-size": 15,
        "spacing": 8
    },
    "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
        "alsa_output.pci-0000_00_1f.3.analog-stereo": "",
        "alsa_output.pci-0000_00_1f.3.anal#cba6f7og-stereo-muted": "",
        "headphone": "",
        "hands-free": "",
        "headset": "",
        "phone": "",
        "phone-muted": "",
        "portable": "",
        "car": "",
        "default": ["", ""]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
    }
}