{
  "layer": "top",
  "position": "top",
  "exclusive": true,
  "passthrough": false,

  "modules-left": [
    "group/clock",
    "group/battery",
    "group/workspaces"
  ],
  "modules-center": [],
  "modules-right": [
    "group/network",
    "group/audio",
    "group/notification",
    "group/tray"
  ],

  /* --- GROUPS CONFIGURATION --- */

  "group/clock": {
    "modules": ["clock"]
  },

  "group/battery": {
    "modules": ["battery"]
  },

  "group/workspaces": {
    "modules": ["hyprland/workspaces#kanji"]
  },

  "group/network": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "network-text",
      "transition-left-to-right": false
    },
    "modules": ["network", "network#ssid"]
  },

  "group/audio": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio#microphone"]
  },

  "group/notification": {
    "orientation": "inherit",
    "modules": ["custom/notification"]
  },

  "group/tray": {
    "modules": ["tray"]
  },

  /* --- MODULES DETAIL --- */

  "hyprland/workspaces#kanji": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    },
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "十"
    }
  },

  "clock": {
    "format": "󱑊 {:%H:%M}",
    "format-alt": "󰃭 {:%a, %d %b}",
    "tooltip-format": "<big>{:%Y}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "battery": {
    "full-at": 100,
    "design-capacity": false,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": "󱘖 {capacity}%",
    "format-full": "{icon} Full",
    "format-alt": "{icon} {time}",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "format-time": "{H}h {M}min",
    "tooltip": true,
    "tooltip-format": "{timeTo} {power}w",
    "on-click-right": "wlogout -b 5 -c 10"
  },

  "network": {
    "on-click": "bash ~/.config/rofi/scripts/rofi-wifi-menu.sh",
    "interface": "wlan0",
    "format-wifi": "󰤨",
    "format-ethernet": "󰊗",
    "format-disconnected": "󰤮",
    "tooltip-format": "{essid} ({signalStrength}%)"
  },

  "network#ssid": {
    "format-wifi": "{essid}",
    "format-ethernet": "{ipaddr}",
    "format-disconnected": "Disconnected",
    "tooltip": false
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "phone-muted": "",
      "portable": "",
      "car": "",
      "default": ["", ""]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": " {volume}%",
    "format-source-muted": " Muted",
    "on-click": "~/.config/hypr/scripts/volume_control.sh --toggle-mic",
    "on-click-right": "pavucontrol -t 4",
    "on-scroll-up": "~/.config/hypr/scripts/volume_control.sh --mic-inc",
    "on-scroll-down": "~/.config/hypr/scripts/volume_control.sh --mic-dec",
    "tooltip-format": "{source_desc} | {source_volume}%",
    "scroll-step": 5
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "󱅫",
      "none": "󰂚",
      "dnd-notification": "󱏧",
      "dnd-none": "󰂛",
      "inhibited-notification": "󱅫",
      "inhibited-none": "󰂚",
      "dnd-inhibited-notification": "󱏧",
      "dnd-inhibited-none": "󰂛"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "tray": {
    "icon-size": 15,
    "spacing": 8
  }
}